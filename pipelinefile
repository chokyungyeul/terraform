pipeline {
agent any
tools {
  terraform 'terraform'
}
stages { 
   stage ('Checkout Repo') { 
     steps { 
       cleanWs()
       sh  '''
            git clone -b dev --single-branch https://github.com/chokyungyeul/terraform.git

            '''
      }
      } 

stage ('Terraform version') { 
  steps {
   sh '''
    terraform --version
   ''' 
    }
    }
    
  stage ('Terraform init') { 
  steps {
   sh '''
   cd /var/lib/jenkins/workspace/dev/terraform/
   terraform init
   ''' 
   }
   }
  stage ('Terraform plan') { 
  steps {
   sh '''
   cd /var/lib/jenkins/workspace/dev/terraform/
   terraform plan -out=tfplan.out
   terraform show -json tfplan.out
   ''' 
   }
   }
 }
 }