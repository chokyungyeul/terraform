pipeline {
agent any
tools {
  terraform 'terraform'
}
 stages { 
   stage ('Checkout Repo') { 
     steps { 
       cleanWs()
       sh  '''
            git clone -b master --single-branch https://github.com/chokyungyeul/terraform.git

            '''
      }
      } 

stage ('Terraform version') { 
  steps {
   sh '''
    terraform --version
   ''' 
    }
    }
    
  stage ('Terraform init') { 
  steps {
   sh '''
   cd /var/lib/jenkins/workspace/master/terraform/
   cp /var/lib/jenkins/workspace/terraformtf/prd/terraform.tfstate.backup ./
   terraform init
   ''' 
   }
   }
   
  stage ('Terraform plan') { 
  steps {
   sh '''
   cd /var/lib/jenkins/workspace/master/terraform/
   terraform plan -out=tfplan.out
   terraform show -json tfplan.out
   ''' 
   }
   }
   
 stage ('Terraform apply') { 
  steps {
   sh '''
   cd /var/lib/jenkins/workspace/master/terraform/
   terraform apply --auto-approve
   cp ./terraform.tfstate.backup /var/lib/jenkins/workspace/terraformtf/prd/
   ''' 
   
   }
    }
  }
}